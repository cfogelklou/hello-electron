name: Continuous Integration

on:
  push:
    branches: [master, devel]
  pull_request:
    branches: [master, devel]
  workflow_dispatch:
  
jobs:
  unit-tests:
    name: Runs unit tests on Ubuntu
    runs-on: ubuntu-latest

    steps:
      # Do git checkout
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Setup node
        uses: actions/setup-node@v3
        with:
          node-version: 16

      # Run unit tests 
      - name: Run unit tests
        run: |
          npm install
          npm run test

